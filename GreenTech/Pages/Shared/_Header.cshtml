@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated = HttpContextAccessor.HttpContext?.Session.GetString("IsAuthenticated") == "true";
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName") ?? "Khách";
    var userRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRoles");
    var userEmail = HttpContextAccessor.HttpContext?.Session.GetString("UserEmail");
}

<!-- Header -->
<header class="bg-white border-b border-gray-200 px-4 py-3 lg:px-6">
    <div class="flex items-center justify-between">
        <!-- Left Section: Mobile Menu Button + Breadcrumb -->
        <div class="flex items-center gap-4">
            <!-- Mobile Menu Button -->
            <button id="sidebar-toggle"
                class="lg:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100 hover:text-gray-900">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16">
                    </path>
                </svg>
            </button>

            <!-- Breadcrumb -->
            <nav class="hidden sm:flex items-center space-x-2 text-sm">
                <a asp-page="/Index" class="text-gray-500 hover:text-gray-700">Dashboard</a>
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
                <span class="text-gray-900 font-medium">@ViewData["Title"]</span>
            </nav>
        </div>

        <!-- Center Section: Search -->
        <div class="hidden md:flex flex-1 max-w-md mx-8">
            <div class="relative w-full">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
                <input type="text"
                    class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-green-500 focus:border-green-500 sm:text-sm"
                    placeholder="Tìm kiếm sản phẩm, đơn hàng...">
            </div>
        </div>

        <!-- Right Section: Notifications + User Menu -->
        <div class="flex items-center gap-3">

            <!-- Notifications -->
            <div class="relative">
                <button id="notification-button"
                    class="p-2 text-gray-600 hover:bg-gray-100 hover:text-gray-900 rounded-lg transition-colors relative">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9">
                        </path>
                    </svg>
                    <!-- Notification Badge -->
                    <span
                        class="absolute -top-1 -right-1 h-4 w-4 bg-red-500 text-white text-xs rounded-full flex items-center justify-center">3</span>
                </button>

                <!-- Notification Dropdown -->
                <div id="notification-dropdown"
                    class="hidden absolute right-0 mt-2 w-80 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
                    <div class="p-4 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <h3 class="text-lg font-semibold text-gray-900">Thông báo</h3>
                            <button class="text-sm text-green-600 hover:text-green-700">Đánh dấu đã đọc</button>
                        </div>
                    </div>
                    <div class="max-h-64 overflow-y-auto">
                        <!-- Notification Item 1 -->
                        <div class="p-4 border-b border-gray-100 hover:bg-gray-50">
                            <div class="flex items-start gap-3">
                                <div class="w-2 h-2 bg-red-500 rounded-full mt-2"></div>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-gray-900">Đơn hàng mới #12345</p>
                                    <p class="text-xs text-gray-500 mt-1">Khách hàng Nguyễn Văn A vừa đặt hàng trị giá
                                        1,250,000đ</p>
                                    <p class="text-xs text-gray-400 mt-1">2 phút trước</p>
                                </div>
                            </div>
                        </div>
                        <!-- Notification Item 2 -->
                        <div class="p-4 border-b border-gray-100 hover:bg-gray-50">
                            <div class="flex items-start gap-3">
                                <div class="w-2 h-2 bg-yellow-500 rounded-full mt-2"></div>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-gray-900">Sản phẩm sắp hết hàng</p>
                                    <p class="text-xs text-gray-500 mt-1">iPhone 15 Pro chỉ còn 5 sản phẩm trong kho</p>
                                    <p class="text-xs text-gray-400 mt-1">1 giờ trước</p>
                                </div>
                            </div>
                        </div>
                        <!-- Notification Item 3 -->
                        <div class="p-4 hover:bg-gray-50">
                            <div class="flex items-start gap-3">
                                <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                                <div class="flex-1">
                                    <p class="text-sm font-medium text-gray-900">Thanh toán thành công</p>
                                    <p class="text-xs text-gray-500 mt-1">Đơn hàng #12344 đã được thanh toán</p>
                                    <p class="text-xs text-gray-400 mt-1">3 giờ trước</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="p-4 border-t border-gray-200">
                        <a href="#"
                            class="block text-center text-sm text-green-600 hover:text-green-700 font-medium">Xem tất cả
                            thông báo</a>
                    </div>
                </div>
            </div>

            <!-- User Menu -->
            @if (isAuthenticated)
            {
                <div class="relative">
                    <button id="user-menu-button"
                        class="flex items-center gap-3 p-2 text-gray-700 hover:bg-gray-100 rounded-lg transition-colors">
                        <div
                            class="w-8 h-8 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                            <span class="text-white font-semibold text-sm">@(userName?.Substring(0, 1).ToUpper() ??
                                                            "A")</span>
                    </div>
                    <div class="hidden lg:block text-left">
                        <p class="text-sm font-medium text-gray-900">@userName</p>
                        <p class="text-xs text-gray-500">Quản trị viên</p>
                    </div>
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>

                    <!-- User Dropdown -->
                    <div id="user-dropdown"
                        class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 z-50">
                        <div class="p-2">
                            <div class="px-3 py-2 text-xs text-gray-500 border-b border-gray-100 mb-1">
                                <p class="font-medium text-gray-700">@userEmail</p>
                            </div>
                            <a href="#"
                                class="flex items-center gap-3 px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-lg">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                                Thông tin cá nhân
                            </a>
                            <a href="#"
                                class="flex items-center gap-3 px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded-lg">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z">
                                    </path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                                Cài đặt
                            </a>
                            <div class="border-t border-gray-200 my-1"></div>
                            <form method="post" asp-page="/Auth/Logout">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                    class="w-full flex items-center gap-3 px-3 py-2 text-sm text-red-600 hover:bg-red-50 rounded-lg text-left">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M17 16l4-4m0 0l-4-4m4 4H3"></path>
                                    </svg>
                                    Đăng xuất
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                        }
            else
            {
                <div class="flex items-center gap-2">
                    <a href="https://localhost:7135/Auth/Login"
                        class="px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-100 rounded-lg">
                        Đăng nhập
                    </a>
                </div>
            }
        </div>
    </div>
</header>