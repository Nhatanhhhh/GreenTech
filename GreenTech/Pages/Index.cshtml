            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                        <span class="text-green-600 font-semibold text-sm">#1</span>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900">#12345</p>
                        <p class="text-sm text-gray-500">Nguyễn Văn A</p>
                    </div>
                </div>
                <div class="text-right">
                    <p class="font-semibold text-gray-900">₫1,250,000</p>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Hoàn thành
                    </span>
                </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-yellow-100 rounded-full flex items-center justify-center">
                        <span class="text-yellow-600 font-semibold text-sm">#2</span>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900">#12344</p>
                        <p class="text-sm text-gray-500">Trần Thị B</p>
                    </div>
                </div>
                <div class="text-right">
                    <p class="font-semibold text-gray-900">₫890,000</p>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        Đang xử lý
                    </span>
                </div>
            </div>

            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <span class="text-blue-600 font-semibold text-sm">#3</span>
                    </div>
                    <div>
                        <p class="font-medium text-gray-900">#12343</p>
                        <p class="text-sm text-gray-500">Lê Văn C</p>
                    </div>
                </div>
                <div class="text-right">
                    <p class="font-semibold text-gray-900">₫2,100,000</p>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        Đang giao
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Products -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-lg font-semibold text-gray-900">Sản phẩm bán chạy</h3>
            <a href="#" class="text-sm text-green-600 hover:text-green-700 font-medium">Xem tất cả</a>
        </div>
        <div class="space-y-4">
            <div class="flex items-center gap-4">
                <div class="w-12 h-12 bg-gray-200 rounded-lg flex items-center justify-center">
                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
