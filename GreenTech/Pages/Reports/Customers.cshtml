@page
@model GreenTech.Pages.Reports.CustomersModel
@{
    ViewData["Title"] = "Báo cáo khách hàng";
}

<div class="container-fluid px-4 py-6">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">Báo cáo khách hàng</h1>
        <form method="post" asp-page-handler="Export" class="inline">
            <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                Xuất Excel
            </button>
        </form>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-lg shadow-md p-4 mb-6">
        <form method="get" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-1">Từ ngày</label>
                <input type="date" asp-for="StartDate" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 mb-1">Đến ngày</label>
                <input type="date" asp-for="EndDate" class="w-full px-3 py-2 border border-gray-300 rounded-lg">
            </div>
            <div>
                <button type="submit" class="px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                    Lọc
                </button>
            </div>
        </form>
    </div>

    <!-- Statistics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-sm font-medium text-gray-500 mb-2">Tổng khách hàng</h3>
            <p class="text-2xl font-bold text-gray-900">@Model.TotalCustomers</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-sm font-medium text-gray-500 mb-2">Khách hàng hoạt động</h3>
            <p class="text-2xl font-bold text-green-600">@Model.ActiveCustomers</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-sm font-medium text-gray-500 mb-2">Khách hàng mới</h3>
            <p class="text-2xl font-bold text-blue-600">@Model.NewCustomers</p>
        </div>
        <div class="bg-white rounded-lg shadow-md p-6">
            <h3 class="text-sm font-medium text-gray-500 mb-2">Khách hàng bị chặn</h3>
            <p class="text-2xl font-bold text-red-600">@Model.BannedCustomers</p>
        </div>
    </div>

    <!-- Top Customers -->
    <div class="bg-white rounded-lg shadow-md p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Top 10 khách hàng mua nhiều nhất</h2>
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Họ tên</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Số đơn hàng</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tổng chi tiêu</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var customer in Model.TopCustomers)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@customer.FullName</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@customer.Email</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@customer.TotalOrders</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@customer.TotalSpent.ToString("N0") đ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

