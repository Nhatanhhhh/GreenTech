@page
@model GreenTech.Pages.Blogs.CreateModel
@{
    ViewData["Title"] = "Thêm bài viết mới";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Thêm bài viết mới</h1>
    <p class="text-gray-600 mt-2">Điền thông tin bài viết mới</p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <form method="post">
        <div class="grid grid-cols-2 gap-6">
            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Tiêu đề *</label>
                <input asp-for="Blog.Title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Blog.Title" class="text-red-500 text-xs"></span>
            </div>

            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Mô tả ngắn</label>
                <textarea asp-for="Blog.Excerpt" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
            </div>

            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Nội dung *</label>
                <textarea asp-for="Blog.Content" rows="10" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
                <span asp-validation-for="Blog.Content" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Danh mục</label>
                <select asp-for="Blog.CategoryId" asp-items="Model.Categories" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500">
                    <option value="">Chọn danh mục</option>
                </select>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Tags (phân cách bằng dấu phẩy)</label>
                <input asp-for="Blog.Tags" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="tag1, tag2, tag3" />
            </div>

            <div>
                <label class="flex items-center">
                    <input asp-for="Blog.IsFeatured" type="checkbox" class="rounded border-gray-300 text-green-600 focus:ring-green-500" />
                    <span class="ml-2 text-sm text-gray-700">Nổi bật</span>
                </label>
            </div>

            <div>
                <label class="flex items-center">
                    <input asp-for="Blog.IsPublished" type="checkbox" class="rounded border-gray-300 text-green-600 focus:ring-green-500" />
                    <span class="ml-2 text-sm text-gray-700">Publish ngay</span>
                </label>
            </div>

            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">SEO Title</label>
                <input asp-for="Blog.SeoTitle" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
            </div>

            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">SEO Description</label>
                <textarea asp-for="Blog.SeoDescription" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
            </div>
        </div>

        <div class="mt-6 flex gap-3">
            <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">Tạo bài viết</button>
            <a asp-page="./Index" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

