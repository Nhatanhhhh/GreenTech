@page "{id:int}"
@model GreenTech.Pages.Blogs.DeleteModel
@{
    ViewData["Title"] = "Xóa bài viết";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Xóa bài viết</h1>
    <p class="text-gray-600 mt-2">Xác nhận xóa bài viết này</p>
</div>

@if (Model.Blog == null)
{
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
        <p class="text-red-800">Không tìm thấy bài viết này.</p>
        <a asp-page="./Index" class="text-red-600 hover:underline mt-2 inline-block">Quay lại danh sách</a>
    </div>
}
else
{
    <div class="bg-white rounded-lg shadow-sm border border-red-200 p-6">
        <div class="mb-6">
            <div class="flex items-center gap-4">
                <img src="@(Model.Blog.FeaturedImage ?? "/images/no-image.png")" alt="@Model.Blog.Title" class="w-24 h-24 object-cover rounded-lg">
                <div>
                    <h2 class="text-xl font-semibold text-gray-900">@Model.Blog.Title</h2>
                    <p class="text-gray-600">Tác giả: @Model.Blog.AuthorName</p>
                    <p class="text-gray-600">Lượt xem: @Model.Blog.ViewCount</p>
                </div>
            </div>
        </div>

        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
            <p class="text-yellow-800">
                <strong>⚠️ Cảnh báo:</strong> Bạn sắp xóa bài viết này. Hành động này không thể hoàn tác.
            </p>
        </div>

        <form method="post">
            <div class="flex gap-3">
                <button type="submit" class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                    Xác nhận xóa
                </button>
                <a asp-page="./Index" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                    Hủy
                </a>
            </div>
        </form>
    </div>
}

