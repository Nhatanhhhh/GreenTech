@page
@model GreenTech.Pages.Banners.DeleteModel
@{
    ViewData["Title"] = "Xóa banner";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Xóa banner</h1>
    <p class="text-gray-600 mt-2">Xác nhận xóa banner này</p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="mb-6">
        <div class="rounded-lg overflow-hidden border border-gray-200">
            <img src="@(Model.Banner.ImageUrl ?? "/images/no-image.png")" alt="@Model.Banner.Title" class="w-full h-64 object-cover">
        </div>
    </div>

    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm text-red-700">
                    Bạn có chắc chắn muốn xóa banner này không? Hành động này không thể hoàn tác.
                </p>
            </div>
        </div>
    </div>

    <div class="border border-gray-200 rounded-lg p-4 mb-6">
        <dl class="grid grid-cols-1 gap-4">
            <div>
                <dt class="text-sm font-medium text-gray-500">ID</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Banner.Id</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Tiêu đề</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Banner.Title</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Mô tả</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Banner.Description</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Vị trí</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Banner.Position</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Thứ tự sắp xếp</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Banner.SortOrder</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">URL liên kết</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Banner.LinkUrl</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Lượt click</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Banner.ClickCount</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Trạng thái</dt>
                <dd class="mt-1">
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full @(Model.Banner.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                        @(Model.Banner.IsActive ? "Hoạt động" : "Không hoạt động")
                    </span>
                </dd>
            </div>
        </dl>
    </div>

    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
        <div class="flex gap-3">
            <button type="submit" class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">Xóa banner</button>
            <a asp-page="./Index" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

