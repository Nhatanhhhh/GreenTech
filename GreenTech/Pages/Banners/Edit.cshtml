@page
@model GreenTech.Pages.Banners.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa banner";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Chỉnh sửa banner</h1>
    <p class="text-gray-600 mt-2">Cập nhật thông tin banner</p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <form method="post" enctype="multipart/form-data">
        <div class="grid grid-cols-2 gap-6">
            <!-- Tiêu đề -->
            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Tiêu đề *</label>
                <input asp-for="Banner.Title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Banner.Title" class="text-red-500 text-xs"></span>
            </div>

            <!-- Mô tả -->
            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Mô tả *</label>
                <textarea asp-for="Banner.Description" rows="3" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500"></textarea>
                <span asp-validation-for="Banner.Description" class="text-red-500 text-xs"></span>
            </div>

            <!-- Ảnh hiện tại -->
            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Ảnh hiện tại / Xem trước</label>
                <img id="previewImage" src="@Model.Banner.ImageUrl" alt="Banner" class="h-40 rounded-lg border mb-2 object-contain" />
            </div>
                    
            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Chọn ảnh *</label>
                
                <div class="flex items-center gap-6">
                    <!-- Nút chọn ảnh -->
                    <div class="flex-1">
                        <input type="file" id="ImageFile" name="ImageFile" accept="image/*"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                        <span asp-validation-for="Banner.ImageUrl" class="text-red-500 text-xs"></span>
                    </div>

                    <!-- Ảnh xem trước -->
                    <div class="w-40 h-40 border border-gray-300 rounded-lg flex items-center justify-center bg-gray-50">
                        <img id="previewImg" class="max-h-36 max-w-36 object-contain rounded-lg hidden" />
                    </div>
                </div>
            </div>



            <!-- URL liên kết -->
            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">URL liên kết *</label>
                <input asp-for="Banner.LinkUrl" type="url" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Banner.LinkUrl" class="text-red-500 text-xs"></span>
            </div>

            <!-- Vị trí -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Vị trí *</label>
                <select asp-for="Banner.Position" asp-items="Model.Positions"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
                    <option value="">Chọn vị trí</option>
                </select>
                <span asp-validation-for="Banner.Position" class="text-red-500 text-xs"></span>
            </div>

            <!-- Thứ tự -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Thứ tự sắp xếp</label>
                <input asp-for="Banner.SortOrder" type="number"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" />
            </div>

            <!-- Ngày bắt đầu -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Ngày bắt đầu</label>
                <input asp-for="Banner.StartDate" type="datetime-local"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" />
            </div>

            <!-- Ngày kết thúc -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Ngày kết thúc</label>
                <input asp-for="Banner.EndDate" type="datetime-local"
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500" />
            </div>

            <!-- Trạng thái -->
            <div>
                <label class="flex items-center">
                    <input asp-for="Banner.IsActive" type="checkbox" class="rounded border-gray-300 text-green-600 focus:ring-green-500" />
                    <span class="ml-2 text-sm text-gray-700">Hoạt động</span>
                </label>
            </div>
        </div>

        <!-- Nút -->
        <div class="mt-6 flex gap-3">
            <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">Cập nhật</button>
            <a asp-page="./Index" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        // Khi người dùng chọn file ảnh mới
        document.getElementById("ImageFile").addEventListener("change", function (event) {
            const file = event.target.files[0];
            const preview = document.getElementById("previewImage");

            if (file) {
                const reader = new FileReader();
                reader.onload = e => {
                    preview.src = e.target.result;
                };
                reader.readAsDataURL(file);
            } else {
                // Nếu không có file, giữ nguyên ảnh cũ
                preview.src = "@Model.Banner.ImageUrl";
            }
        });
    </script>
}
