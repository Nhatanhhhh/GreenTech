@page "{id:int}"
@model GreenTech.Pages.CouponTemplates.DeleteModel
@{
    ViewData["Title"] = "Xóa Template Coupon";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Xóa Template Coupon</h1>
    <p class="text-gray-600 mt-2">Xác nhận xóa template này</p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
        <div class="flex">
            <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
            </div>
            <div class="ml-3">
                <p class="text-sm text-red-700">
                    Bạn có chắc chắn muốn xóa template này không? Hành động này không thể hoàn tác.
                </p>
            </div>
        </div>
    </div>

    <div class="border border-gray-200 rounded-lg p-4 mb-6">
        <dl class="grid grid-cols-1 gap-4">
            <div>
                <dt class="text-sm font-medium text-gray-500">ID</dt>
                <dd class="mt-1 text-sm text-gray-900">@Model.Template.Id</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Tên template</dt>
                <dd class="mt-1 text-sm text-gray-900 font-semibold">@Model.Template.Name</dd>
            </div>
            @if (!string.IsNullOrEmpty(Model.Template.Description))
            {
                <div>
                    <dt class="text-sm font-medium text-gray-500">Mô tả</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.Template.Description</dd>
                </div>
            }
            <div>
                <dt class="text-sm font-medium text-gray-500">Loại giảm giá</dt>
                <dd class="mt-1">
                    @if (Model.Template.DiscountType.ToString() == "PERCENT")
                    {
                        <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">Phần trăm</span>
                    }
                    else
                    {
                        <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-purple-100 text-purple-800">Số tiền cố định</span>
                    }
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Giá trị giảm giá</dt>
                <dd class="mt-1 text-sm text-gray-900">
                    @if (Model.Template.DiscountType.ToString() == "PERCENT")
                    {
                        @($"{Model.Template.DiscountValue.ToString("0.##")}%")
                    }
                    else
                    {
                        @($"{Model.Template.DiscountValue.ToString("N0")} đ")
                    }
                </dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Chi phí điểm</dt>
                <dd class="mt-1 text-sm text-gray-900">@($"{Model.Template.PointsCost} điểm")</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Giá trị đơn hàng tối thiểu</dt>
                <dd class="mt-1 text-sm text-gray-900">@($"{Model.Template.MinOrderAmount.ToString("N0")} đ")</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Trạng thái</dt>
                <dd class="mt-1">
                    <span class="px-2 py-1 inline-flex text-xs leading-5 font-semibold rounded-full @(Model.Template.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                        @(Model.Template.IsActive ? "Hoạt động" : "Không hoạt động")
                    </span>
                </dd>
            </div>
        </dl>
    </div>

    <form method="post" id="deleteCouponTemplateForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Template.Id" />
        <!-- Handler parameter để route đến OnPostDeleteAsync -->
        <input type="hidden" name="handler" value="Delete" />
        
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>
        <div class="flex gap-3">
            <button type="submit" asp-page-handler="Delete" class="px-6 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">Xóa template</button>
            <a asp-page="./Index" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

