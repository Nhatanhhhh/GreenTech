@page
@model GreenTech.Pages.Suppliers.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa nhà cung cấp";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Chỉnh sửa nhà cung cấp</h1>
    <p class="text-gray-600 mt-2">Cập nhật thông tin nhà cung cấp</p>
</div>

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <form method="post">
        <div class="grid grid-cols-2 gap-6">
            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Tên nhà cung cấp *</label>
                <input asp-for="Supplier.Name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Supplier.Name" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Mã nhà cung cấp</label>
                <input type="text" value="@Model.SupplierInfo?.Code" disabled class="w-full px-4 py-2 border border-gray-300 rounded-lg bg-gray-50 text-gray-500" />
                <p class="text-xs text-gray-500 mt-1">Mã nhà cung cấp không thể thay đổi</p>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Người liên hệ</label>
                <input asp-for="Supplier.ContactPerson" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Supplier.ContactPerson" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Supplier.Email" type="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Supplier.Email" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                <input asp-for="Supplier.Phone" type="tel" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Supplier.Phone" class="text-red-500 text-xs"></span>
            </div>

            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ</label>
                <input asp-for="Supplier.Address" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Supplier.Address" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Mã số thuế</label>
                <input asp-for="Supplier.TaxCode" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Supplier.TaxCode" class="text-red-500 text-xs"></span>
            </div>

            <div class="col-span-2">
                <label class="block text-sm font-medium text-gray-700 mb-1">Điều khoản thanh toán</label>
                <input asp-for="Supplier.PaymentTerms" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500" />
                <span asp-validation-for="Supplier.PaymentTerms" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label class="flex items-center">
                    <input asp-for="Supplier.IsActive" type="checkbox" class="rounded border-gray-300 text-green-600 focus:ring-green-500" />
                    <span class="ml-2 text-sm text-gray-700">Hoạt động</span>
                </label>
            </div>
        </div>

        <div class="mt-6 flex gap-3">
            <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">Cập nhật</button>
            <a asp-page="./Index" class="px-6 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

