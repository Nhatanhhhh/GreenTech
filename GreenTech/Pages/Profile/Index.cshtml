@page
@model GreenTech.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Thông tin cá nhân</h1>
    <p class="text-gray-600 mt-2">Quản lý thông tin tài khoản của bạn</p>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-800">
        @TempData["ErrorMessage"]
    </div>
}

@if (Model.Profile != null)
{
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Avatar Section -->
        <div class="lg:col-span-1">
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <div class="flex flex-col items-center">
                    @if (!string.IsNullOrEmpty(Model.Profile.Avatar) && !Model.Profile.Avatar.Contains("no-avatar"))
                    {
                        <img src="@Model.Profile.Avatar" alt="@Model.Profile.FullName" 
                             class="w-32 h-32 rounded-full object-cover border-4 border-green-500 mb-4">
                    }
                    else
                    {
                        <div class="w-32 h-32 rounded-full bg-gradient-to-br from-blue-500 to-purple-600 flex items-center justify-center mb-4">
                            <span class="text-white font-bold text-4xl">@(Model.Profile.FullName?.Substring(0, 1).ToUpper() ?? "A")</span>
                        </div>
                    }
                    
                    <h3 class="text-xl font-bold text-gray-900 mb-1">@Model.Profile.FullName</h3>
                    <p class="text-sm text-gray-500 mb-4">@Model.Profile.Email</p>
                    
                    <!-- Roles -->
                    @if (Model.Profile.Roles != null && Model.Profile.Roles.Any())
                    {
                        <div class="flex flex-wrap gap-2 justify-center mb-4">
                            @foreach (var role in Model.Profile.Roles)
                            {
                                var roleClass = role == "ROLE_ADMIN" 
                                    ? "bg-yellow-100 text-yellow-700" 
                                    : role == "ROLE_STAFF"
                                    ? "bg-green-100 text-green-700"
                                    : "bg-gray-100 text-gray-700";
                                <span class="px-3 py-1 text-xs font-medium rounded-full @roleClass">
                                    @role.Replace("ROLE_", "")
                                </span>
                            }
                        </div>
                    }
                    
                    <!-- Upload Avatar Form - Available for both Admin and Staff -->
                    <form method="post" asp-page-handler="UploadAvatar" enctype="multipart/form-data" class="w-full">
                        @Html.AntiForgeryToken()
                        <label for="avatarFile" class="cursor-pointer w-full">
                            <div class="w-full px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition text-center text-sm font-medium">
                                <i class="fas fa-camera mr-2"></i>Đổi ảnh đại diện
                            </div>
                            <input type="file" id="avatarFile" name="avatarFile" accept="image/*" class="hidden" 
                                   onchange="this.form.submit()" />
                        </label>
                    </form>
                </div>
            </div>
        </div>

        <!-- Profile Information & Forms -->
        <div class="lg:col-span-2 space-y-6">
            <!-- Profile Information -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h2 class="text-xl font-bold text-gray-900 mb-4">Thông tin cá nhân</h2>
                
                @if (Model.IsAdmin)
                {
                    <!-- Update Profile Form - Only for Admin -->
                    <form method="post" asp-page-handler="UpdateProfile">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label asp-for="UpdateProfileModel.FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="UpdateProfileModel.FullName" 
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="UpdateProfileModel.FullName" class="text-red-600 text-sm"></span>
                            </div>
                            
                            <div>
                                <label asp-for="UpdateProfileModel.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="UpdateProfileModel.Email" type="email"
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="UpdateProfileModel.Email" class="text-red-600 text-sm"></span>
                            </div>
                            
                            <div>
                                <label asp-for="UpdateProfileModel.Phone" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="UpdateProfileModel.Phone" 
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="UpdateProfileModel.Phone" class="text-red-600 text-sm"></span>
                            </div>
                            
                            <div>
                                <label asp-for="UpdateProfileModel.Province" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="UpdateProfileModel.Province" 
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="UpdateProfileModel.Province" class="text-red-600 text-sm"></span>
                            </div>
                            
                            <div>
                                <label asp-for="UpdateProfileModel.District" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="UpdateProfileModel.District" 
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="UpdateProfileModel.District" class="text-red-600 text-sm"></span>
                            </div>
                            
                            <div>
                                <label asp-for="UpdateProfileModel.Ward" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="UpdateProfileModel.Ward" 
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="UpdateProfileModel.Ward" class="text-red-600 text-sm"></span>
                            </div>
                        </div>
                        
                        <div class="mt-4">
                            <label asp-for="UpdateProfileModel.SpecificAddress" class="block text-sm font-medium text-gray-700 mb-1"></label>
                            <input asp-for="UpdateProfileModel.SpecificAddress" 
                                   class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                            <span asp-validation-for="UpdateProfileModel.SpecificAddress" class="text-red-600 text-sm"></span>
                        </div>
                        
                        <div class="mt-6">
                            <button type="submit" class="px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition font-medium">
                                <i class="fas fa-save mr-2"></i>Cập nhật thông tin
                            </button>
                        </div>
                    </form>
                }
                else
                {
                    <!-- Read-only view for Staff -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                            <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">@Model.Profile.FullName</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                            <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">@Model.Profile.Email</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Số điện thoại</label>
                            <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">@Model.Profile.Phone</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Tỉnh/Thành phố</label>
                            <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">@Model.Profile.Province</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Quận/Huyện</label>
                            <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">@Model.Profile.District</p>
                        </div>
                        
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Phường/Xã</label>
                            <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">@Model.Profile.Ward</p>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Địa chỉ cụ thể</label>
                        <p class="w-full px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">@(string.IsNullOrEmpty(Model.Profile.SpecificAddress) ? "Chưa có" : Model.Profile.SpecificAddress)</p>
                    </div>
                }
            </div>

            <!-- Change Password Form - Only for Admin -->
            @if (Model.IsAdmin)
            {
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Đổi mật khẩu</h2>
                    <form method="post" asp-page-handler="ChangePassword">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>
                        
                        <div class="space-y-4">
                            <div>
                                <label asp-for="ChangePasswordModel.CurrentPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="ChangePasswordModel.CurrentPassword" type="password"
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="ChangePasswordModel.CurrentPassword" class="text-red-600 text-sm"></span>
                            </div>
                            
                            <div>
                                <label asp-for="ChangePasswordModel.NewPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="ChangePasswordModel.NewPassword" type="password"
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="ChangePasswordModel.NewPassword" class="text-red-600 text-sm"></span>
                            </div>
                            
                            <div>
                                <label asp-for="ChangePasswordModel.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                                <input asp-for="ChangePasswordModel.ConfirmPassword" type="password"
                                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500" />
                                <span asp-validation-for="ChangePasswordModel.ConfirmPassword" class="text-red-600 text-sm"></span>
                            </div>
                        </div>
                        
                        <div class="mt-6">
                            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-medium">
                                <i class="fas fa-key mr-2"></i>Đổi mật khẩu
                            </button>
                        </div>
                    </form>
                </div>
            }

        </div>
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

