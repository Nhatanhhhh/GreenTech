@using DAL.DTOs.Banner
@using DAL.DTOs.Product
@using DAL.DTOs.Category
@using DAL.DTOs.Blog
@{
    ViewData["Title"] = "GreenTech - Cây xanh chất lượng cao";
    var banners = ViewBag.Banners as IEnumerable<BannerDTO> ?? new List<BannerDTO>();
    var products = ViewBag.FeaturedProducts as IEnumerable<ProductResponseDTO> ?? new List<ProductResponseDTO>();
    var categories = ViewBag.Categories as IEnumerable<CategoryDTO> ?? new List<CategoryDTO>();
    var blogs = ViewBag.Blogs as IEnumerable<BlogResponseDTO> ?? new List<BlogResponseDTO>();
}

<!-- Hero Banner Section -->
<section class="relative h-[600px] w-full overflow-hidden">
    @if (banners.Any())
    {
        <div id="bannerCarousel" class="relative h-full">
            @foreach (var banner in banners)
            {
                <div class="banner-slide hidden h-full w-full">
                    <a href="@banner.LinkUrl">
                        <img src="@banner.ImageUrl" alt="@banner.Title" class="h-full w-full object-cover">
                        <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-30">
                            <div class="text-center text-white">
                                <h2 class="mb-4 text-5xl font-bold">@banner.Title</h2>
                                <p class="text-xl">@banner.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="flex h-full items-center justify-center bg-gradient-to-r from-green-600 to-green-800">
            <div class="text-center text-white">
                <h1 class="mb-4 text-6xl font-bold">Chào mừng đến GreenTech</h1>
                <p class="text-2xl">Hệ thống cây xanh số 1 Việt Nam</p>
            </div>
        </div>
    }
</section>

<!-- Featured Categories -->
<section class="bg-gray-50 py-12">
    <div class="container mx-auto px-4">
        <h2 class="mb-8 text-center text-3xl font-bold text-gray-800">Danh mục sản phẩm</h2>
        <div id="categories-container" class="grid grid-cols-2 gap-4 md:grid-cols-4 lg:grid-cols-6">
            @foreach (var category in categories.Take(6))
            {
                <a asp-controller="Products" asp-action="Index" asp-route-categoryId="@category.Id" 
                   class="category-item group flex flex-col items-center rounded-lg bg-white p-6 shadow-md transition-all hover:shadow-xl"
                   data-category-id="@category.Id">
                    <img src="@(!string.IsNullOrEmpty(category.Image) ? category.Image : "/images/no-image.png")" 
                         alt="@category.Name" 
                         class="mb-4 h-20 w-20 rounded-full object-cover">
                    <h3 class="text-center text-sm font-semibold text-gray-800 group-hover:text-green-600">@category.Name</h3>
                </a>
            }
        </div>
    </div>
</section>

<!-- Featured Products -->
@if (products.Any())
{
    <section class="py-12">
        <div class="container mx-auto px-4">
            <div class="mb-8 flex items-center justify-between">
                <h2 class="text-3xl font-bold text-gray-800">Sản phẩm nổi bật</h2>
                <a asp-controller="Products" asp-action="Index" class="text-green-600 hover:text-green-700">
                    Xem tất cả <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="grid grid-cols-2 gap-4 md:grid-cols-3 lg:grid-cols-4">
                @foreach (var product in products)
                {
                    <div class="group overflow-hidden rounded-lg bg-white shadow-md transition-all hover:shadow-xl">
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                            <div class="relative overflow-hidden">
                                <img src="@(!string.IsNullOrEmpty(product.Image) ? product.Image : "/images/no-image.png")" 
                                     alt="@product.Name" 
                                     class="h-64 w-full object-cover transition-transform group-hover:scale-110">
                                @if (product.IsFeatured)
                                {
                                    <span class="absolute top-2 left-2 rounded bg-red-500 px-2 py-1 text-xs text-white">Nổi bật</span>
                                }
                            </div>
                            <div class="p-4">
                                <h3 class="mb-2 text-lg font-semibold text-gray-800 line-clamp-2">@product.Name</h3>
                                <p class="mb-2 text-gray-600 line-clamp-2">@product.ShortDescription</p>
                                <div class="flex items-center justify-between">
                                    <span class="text-2xl font-bold text-green-600">@product.SellPrice.ToString("N0") đ</span>
                                    <button type="button" class="js-add-to-cart rounded bg-green-600 px-4 py-2 text-white hover:bg-green-700" data-product-id="@product.Id" onclick="event.preventDefault();">
                                        <i class="fas fa-cart-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Featured Blogs -->
@if (blogs.Any())
{
    <section class="bg-gray-50 py-12">
        <div class="container mx-auto px-4">
            <div class="mb-8 flex items-center justify-between">
                <h2 class="text-3xl font-bold text-gray-800">Bài viết nổi bật</h2>
                <a href="#" class="text-green-600 hover:text-green-700">
                    Xem tất cả <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                @foreach (var blog in blogs)
                {
                    <div class="overflow-hidden rounded-lg bg-white shadow-md transition-all hover:shadow-xl">
                        <a href="#">
                            <img src="@(!string.IsNullOrEmpty(blog.FeaturedImage) ? blog.FeaturedImage : "/images/no-image.png")" 
                                 alt="@blog.Title" 
                                 class="h-48 w-full object-cover">
                            <div class="p-6">
                                <span class="text-xs text-gray-500">@blog.PublishedAt?.ToString("dd/MM/yyyy")</span>
                                <h3 class="mb-2 text-xl font-semibold text-gray-800">@blog.Title</h3>
                                <p class="mb-4 text-gray-600 line-clamp-3">@blog.Excerpt</p>
                                <a href="#" class="text-green-600 hover:text-green-700">
                                    Đọc thêm <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </section>
}

@section Scripts {
    <script>
        // Banner carousel functionality
        document.addEventListener('DOMContentLoaded', function() {
            const slides = document.querySelectorAll('.banner-slide');
            if (slides.length > 0) {
                let currentIndex = 0;
                slides[0].classList.remove('hidden');
                
                setInterval(() => {
                    slides[currentIndex].classList.add('hidden');
                    currentIndex = (currentIndex + 1) % slides.length;
                    slides[currentIndex].classList.remove('hidden');
                }, 5000);
            }
        });
    </script>
    <script>
        // Handle Add to Cart buttons on the home page (jQuery AJAX)
        function postAddToCart(productId) {
            return $.ajax({
                url: '@Url.Action("AddToCart", "Cart")',
                type: 'POST',
                data: {
                    productId: String(productId),
                    quantity: 1
                }
            });
        }

        $(document).on('click', '.js-add-to-cart', function (e) {
            e.preventDefault();
            var productId = $(this).data('product-id');
            if (!productId) return;
            postAddToCart(productId)
                .done(function (res) {
                    if (res && res.success) {
                        if (window.updateCartCount) window.updateCartCount();
                    } else if (res) {
                        if (res.message && res.message.toLowerCase().indexOf('đăng nhập') !== -1) {
                            window.location.href = '@Url.Action("Login", "Auth")';
                        } else if (res.message) {
                            alert(res.message);
                        }
                    }
                })
                .fail(function () { /* ignore */ });
        });
    </script>
    <script>
        // SignalR: Subscribe to Category changes from Razor Pages app
        (function () {
            function ensureSignalR() {
                if (!window.signalR) {
                    console.warn('SignalR not loaded on Home Index');
                    return false;
                }
                return true;
            }

            function createCategoryElement(category) {
                var categoryId = category.categoryId || category.id;
                var name = category.name || '';
                var image = category.image || '/images/no-image.png';
                var url = '@Url.Action("Index", "Products", new { categoryId = "__ID__" })'.replace('__ID__', categoryId);
                
                var link = document.createElement('a');
                link.href = url;
                link.className = 'category-item group flex flex-col items-center rounded-lg bg-white p-6 shadow-md transition-all hover:shadow-xl';
                link.setAttribute('data-category-id', categoryId);
                
                var img = document.createElement('img');
                img.src = image;
                img.alt = name;
                img.className = 'mb-4 h-20 w-20 rounded-full object-cover';
                
                var h3 = document.createElement('h3');
                h3.className = 'text-center text-sm font-semibold text-gray-800 group-hover:text-green-600';
                h3.textContent = name;
                
                link.appendChild(img);
                link.appendChild(h3);
                
                return link;
            }

            function connectCategoryHub() {
                if (!ensureSignalR()) return;
                
                // Razor Pages base URL hosting the CategoryHub
                var razorBase = 'https://localhost:7142'; // URL của Razor Pages app
                var connection = new signalR.HubConnectionBuilder()
                    .withUrl(razorBase + '/hubs/category', { withCredentials: true })
                    .withAutomaticReconnect()
                    .build();

                connection.on('CategoryChanged', function (payload) {
                    if (!payload) return;
                    
                    var container = document.getElementById('categories-container');
                    if (!container) return;
                    
                    var categoryId = payload.categoryId || payload.id;
                    var existingItems = container.querySelectorAll('.category-item[data-category-id="' + categoryId + '"]');
                    
                    if (payload.action === 'created') {
                        // Chỉ thêm nếu category chưa tồn tại và danh sách chưa đủ 6 items
                        if (existingItems.length === 0) {
                            var currentItems = container.querySelectorAll('.category-item');
                            if (currentItems.length < 6) {
                                // Chỉ thêm nếu category đang active
                                if (payload.isActive !== false) {
                                    var newElement = createCategoryElement(payload);
                                    container.appendChild(newElement);
                                    
                                    // Nếu đã có 6 items, ẩn item cuối cùng
                                    var allItems = container.querySelectorAll('.category-item');
                                    if (allItems.length > 6) {
                                        allItems[allItems.length - 1].style.display = 'none';
                                    }
                                }
                            }
                        }
                    } else if (payload.action === 'updated') {
                        // Cập nhật category nếu đã tồn tại
                        existingItems.forEach(function(item) {
                            var img = item.querySelector('img');
                            var h3 = item.querySelector('h3');
                            if (img && payload.image) {
                                img.src = payload.image;
                            }
                            if (h3 && payload.name) {
                                h3.textContent = payload.name;
                            }
                            // Ẩn nếu category bị deactivate
                            if (payload.isActive === false) {
                                item.style.display = 'none';
                            } else {
                                item.style.display = '';
                            }
                        });
                    } else if (payload.action === 'deleted') {
                        // Xóa category khỏi danh sách
                        existingItems.forEach(function(item) {
                            item.remove();
                        });
                        
                        // Hiển thị lại item đã bị ẩn nếu có
                        var hiddenItems = container.querySelectorAll('.category-item[style*="display: none"]');
                        if (hiddenItems.length > 0) {
                            hiddenItems[0].style.display = '';
                        }
                    }
                });

                connection.start()
                    .then(function () { 
                        console.info('Connected to CategoryHub from MVC Home at ' + razorBase); 
                    })
                    .catch(function (err) { 
                        console.error('Connect CategoryHub error', err); 
                    });
            }

            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', connectCategoryHub);
            } else {
                connectCategoryHub();
            }
        })();
    </script>
}
