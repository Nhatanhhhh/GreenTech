@using DAL.DTOs.Blog
@{
    ViewData["Title"] = "Chi tiết bài viết";
    var blog = ViewBag.Blog as BlogResponseDTO;
    var relatedBlogs = ViewBag.RelatedBlogs as IEnumerable<BlogResponseDTO> ?? new List<BlogResponseDTO>();
}

@if (blog != null)
{
    <div class="container mx-auto px-4 py-8">
        <!-- Breadcrumb -->
        <nav class="mb-6 text-sm">
            <a asp-controller="Home" asp-action="Index" class="text-green-600 hover:text-green-700">Trang chủ</a>
            <span class="mx-2 text-gray-500">/</span>
            <a asp-controller="Blogs" asp-action="Index" class="text-green-600 hover:text-green-700">Blog Tư Vấn</a>
            <span class="mx-2 text-gray-500">/</span>
            <span class="text-gray-700">@blog.Title</span>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <article class="bg-white rounded-lg shadow-md overflow-hidden">
                    <!-- Featured Image -->
                    @if (!string.IsNullOrEmpty(blog.FeaturedImage))
                    {
                        <div class="relative h-96 overflow-hidden">
                            <img src="@blog.FeaturedImage" alt="@blog.Title" class="w-full h-full object-cover">
                        </div>
                    }

                    <div class="p-8">
                        <!-- Header -->
                        <div class="mb-6">
                            <h1 class="text-4xl font-bold text-gray-900 mb-4">@blog.Title</h1>
                            <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600">
                                <span><i class="far fa-calendar mr-2"></i>@blog.PublishedAt?.ToString("dd/MM/yyyy HH:mm")</span>
                                @if (!string.IsNullOrEmpty(blog.AuthorName))
                                {
                                    <span><i class="far fa-user mr-2"></i>@blog.AuthorName</span>
                                }
                                @if (!string.IsNullOrEmpty(blog.CategoryName))
                                {
                                    <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-xs font-medium">
                                        @blog.CategoryName
                                    </span>
                                }
                                <span><i class="far fa-eye mr-2"></i>@blog.ViewCount lượt xem</span>
                            </div>
                        </div>

                        <!-- Tags -->
                        @if (!string.IsNullOrEmpty(blog.Tags))
                        {
                            <div class="mb-6 flex flex-wrap gap-2">
                                @foreach (var tag in blog.Tags.Split(new[] { ',', ';' }, StringSplitOptions.RemoveEmptyEntries))
                                {
                                    <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-xs font-medium">
                                        #@tag.Trim()
                                    </span>
                                }
                            </div>
                        }

                        <!-- Content -->
                        <div class="prose max-w-none mb-8">
                            @Html.Raw(blog.Content)
                        </div>

                        <!-- Share Buttons -->
                        <div class="border-t border-gray-200 pt-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4">Chia sẻ bài viết</h3>
                            <div class="flex gap-3">
                                <a href="#" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
                                    <i class="fab fa-facebook-f mr-2"></i>Facebook
                                </a>
                                <a href="#" class="px-4 py-2 bg-blue-400 text-white rounded-lg hover:bg-blue-500 transition">
                                    <i class="fab fa-twitter mr-2"></i>Twitter
                                </a>
                                <a href="#" class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition">
                                    <i class="fab fa-pinterest mr-2"></i>Pinterest
                                </a>
                            </div>
                        </div>
                    </div>
                </article>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <!-- Related Blogs -->
                @if (relatedBlogs.Any())
                {
                    <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                        <h3 class="text-xl font-bold text-gray-900 mb-4">Bài viết liên quan</h3>
                        <div class="space-y-4">
                            @foreach (var relatedBlog in relatedBlogs)
                            {
                                <a asp-action="Details" asp-route-id="@relatedBlog.Id" asp-route-slug="@relatedBlog.Slug" 
                                   class="block group">
                                    <div class="flex gap-3">
                                        @if (!string.IsNullOrEmpty(relatedBlog.FeaturedImage))
                                        {
                                            <img src="@relatedBlog.FeaturedImage" alt="@relatedBlog.Title" 
                                                 class="w-20 h-20 object-cover rounded-lg">
                                        }
                                        <div class="flex-1">
                                            <h4 class="text-sm font-semibold text-gray-900 group-hover:text-green-600 line-clamp-2">
                                                @relatedBlog.Title
                                            </h4>
                                            <p class="text-xs text-gray-500 mt-1">@relatedBlog.PublishedAt?.ToString("dd/MM/yyyy")</p>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                }

                <!-- Back to Blog List -->
                <div class="bg-white rounded-lg shadow-md p-6">
                    <a asp-action="Index" class="inline-flex items-center text-green-600 hover:text-green-700 font-medium">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Quay lại danh sách bài viết
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mx-auto px-4 py-8">
        <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <i class="fas fa-exclamation-triangle text-6xl text-gray-300 mb-4"></i>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Không tìm thấy bài viết</h3>
            <p class="text-gray-500 mb-6">Bài viết này không tồn tại hoặc đã bị xóa.</p>
            <a asp-action="Index" class="inline-block px-6 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">
                Quay lại danh sách bài viết
            </a>
        </div>
    </div>
}

<style>
    .prose {
        color: #374151;
        line-height: 1.75;
    }
    .prose p {
        margin-bottom: 1.25em;
    }
    .prose h2 {
        font-size: 1.5em;
        font-weight: bold;
        margin-top: 2em;
        margin-bottom: 1em;
    }
    .prose h3 {
        font-size: 1.25em;
        font-weight: bold;
        margin-top: 1.5em;
        margin-bottom: 0.75em;
    }
    .prose img {
        max-width: 100%;
        height: auto;
        border-radius: 0.5rem;
        margin: 1.5em 0;
    }
    .prose ul, .prose ol {
        margin: 1.25em 0;
        padding-left: 1.625em;
    }
    .prose li {
        margin: 0.5em 0;
    }
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

