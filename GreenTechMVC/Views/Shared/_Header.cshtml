@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var isAuthenticated = HttpContextAccessor.HttpContext?.Session.GetString("IsAuthenticated") == "true";
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName") ?? "Khách";
    var currentUserId = HttpContextAccessor.HttpContext?.Session.GetInt32("UserId");
    var userAvatar = HttpContextAccessor.HttpContext?.Session.GetString("UserAvatar");
}
<header class="w-auto bg-white">
    <!-- Top Contact Bar -->
    <div class="flex h-12 items-center justify-end px-8">
        <!-- Contact Info -->
        <div class="flex items-center text-black">
            <div class="ml-8 mr-8 flex items-center gap-4">
                <i class="fas fa-phone"></i>
                <span class="text-[15px] font-['Roboto_Condensed']">
                    Hotline: <strong>0912 250 625</strong>
                </span>
            </div>
            <div class="ml-8 mr-8 flex items-center gap-4">
                <i class="fas fa-map-marker-alt"></i>
                <span class="text-[15px] font-['Roboto_Condensed']">Cây Xanh Haluta</span>
            </div>
        </div>
    </div>

    <!-- Navigation Bar -->
    <div class="flex h-[70px] items-center justify-between bg-[#007934] px-8">
        <!-- Logo -->
        <div class="flex items-center">
            <div>
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo_greentech.png" alt="GreenTech Logo" class="h-[50px]">
                </a>
            </div>
        </div>


        <!-- Search Box -->
        <div class="relative w-[355px]">
            <form method="get" action="@Url.Action("Index", "Products")">
                <i class="fas fa-search absolute left-3 top-6 -translate-y-1/2 transform text-gray-500 z-10"></i>
                <input type="text" name="search" id="searchInput" placeholder="Bạn tìm kiếm sản phẩm gì..." class="relative h-9 w-full rounded-[11px] bg-[#f2f2f2] shadow-inner
                           pl-10 pr-4 text-sm font-['Roboto'] text-black
                           placeholder:text-sm placeholder:font-['Roboto'] placeholder:text-[#707070]
                           focus:outline-none focus:ring-1 focus:ring-blue-500" autocomplete="off"
                    onkeypress="if(event.key === 'Enter') { this.form.submit(); }" />
            </form>
        </div>

        <!-- Main Navigation -->
        <nav class="flex items-center gap-8">
            <a asp-controller="Home" asp-action="Index"
                class="text-white text-[15px] font-['Roboto_Condensed'] hover:text-green-300 transition-colors">TRANG
                CHỦ</a>
            <a asp-controller="Products" asp-action="Index"
                class="text-white text-[15px] font-['Roboto_Condensed'] hover:text-green-300 transition-colors">SẢN
                PHẨM</a>
            <div class="h-0.5 w-[5px] bg-white opacity-50"></div>
            <a href="#"
                class="text-white text-[15px] font-['Roboto_Condensed'] hover:text-green-300 transition-colors">BLOG TƯ
                VẤN</a>
            <a href="#"
                class="text-white text-[15px] font-['Roboto_Condensed'] hover:text-green-300 transition-colors">LIÊN
                HỆ</a>
        </nav>

        <!-- Right Section -->
        <div class="flex items-center justify-between">
            <!-- Cart Icon -->
            <div class="flex items-center">
                <a asp-controller="Cart" asp-action="Index" class="relative text-white hover:text-green-300">
                    <i class="fas fa-shopping-cart text-xl"></i>
                    <span id="cart-count-badge"
                        class="absolute -right-2 -top-2 hidden h-5 w-5 items-center justify-center rounded-full border border-white bg-[#219653] text-white text-[10px]">
                    </span>
                </a>
            </div>

            <!-- Wallet Dropdown -->
            <div class="ml-6 relative" id="wallet-menu-root">
                @if (isAuthenticated)
                {
                    <button type="button" id="wallet-button" class="flex items-center gap-2 text-white hover:text-green-300">
                        <i class="fa-solid fa-wallet"></i>
                        <span id="wallet-balance-text">-- ₫</span>
                        <i class="fa-solid fa-chevron-down text-xs opacity-80"></i>
                    </button>
                    <div id="wallet-dropdown" class="hidden absolute right-0 mt-2 w-56 bg-white rounded-md shadow-lg border z-50">
                        <div class="px-4 py-3 border-b">
                            <p class="text-sm text-gray-600">Số dư ví</p>
                            <p id="wallet-balance-large" class="text-lg font-semibold text-green-700">-- ₫</p>
                        </div>
                        <div class="py-2">
                            <a asp-controller="Wallet" asp-action="TopUp" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Nạp tiền</a>
                            <a asp-controller="Wallet" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Lịch sử ví</a>
                        </div>
                    </div>
                }
            </div>

            <!-- Sign In/ Sign Up -->
            <div class="ml-8 flex items-center gap-3">
                @if (isAuthenticated)
                {
                    <div class="relative" id="user-menu-root">
                        <a asp-controller="Profile" asp-action="Index" class="flex items-center gap-2 text-white text-sm font-['Roboto_Condensed'] hover:text-green-300 transition-colors duration-200">
                            @if (!string.IsNullOrEmpty(userAvatar))
                            {
                                <img id="header-user-avatar" src="@userAvatar" alt="@userName" class="h-8 w-8 rounded-full object-cover border-2 border-white" />
                            }
                            else
                            {
                                <div id="header-avatar-placeholder">
                                    <i class="fas fa-user"></i>
                                </div>
                            }
                            <span>Xin chào, @userName</span>
                        </a>
                    </div>
                    <span class="text-white opacity-50">|</span>

                    <form asp-controller="Auth" asp-action="Logout" method="post" class="inline">
                        @Html.AntiForgeryToken()
                        <button type="submit"
                            class="text-white text-sm font-['Roboto_Condensed'] hover:text-green-300 transition-colors duration-200 bg-transparent border-none p-0 cursor-pointer">
                            <i class="fas fa-sign-out-alt mr-1"></i>
                            Đăng xuất
                        </button>
                    </form>
                }
                else
                {
                    // --- Not Sign in ---
                    <a asp-controller="Auth" asp-action="Login"
                        class="text-white text-sm font-['Roboto_Condensed'] hover:text-green-300 transition-colors duration-200">
                        <i class="fas fa-user mr-1"></i>
                        Đăng nhập
                    </a>
                    <span class="text-white opacity-50">|</span>
                    <a asp-controller="Auth" asp-action="Register"
                        class="text-white text-sm font-['Roboto_Condensed'] hover:text-green-300 transition-colors duration-200">
                        <i class="fa fa-user-plus"></i>
                        Đăng ký
                    </a>
                }
            </div>
        </div>
    </div>
</header>
<script>
    // Update cart count badge with distinct product count (jQuery AJAX)
    function updateCartCount() {
        $.ajax({
            url: '@Url.Action("GetCartCount", "Cart")',
            type: 'GET',
            success: function (response) {
                var badge = document.getElementById('cart-count-badge');
                if (!badge) return;
                var count = response && typeof response.count === 'number' ? response.count : 0;
                if (count > 0) {
                    badge.textContent = count > 99 ? '99+' : String(count);
                    badge.classList.remove('hidden');
                    badge.classList.add('flex');
                } else {
                    badge.classList.add('hidden');
                    badge.classList.remove('flex');
                    badge.textContent = '';
                }
            }
        });
    }

    // Expose globally so other pages can trigger a refresh after add-to-cart
    window.updateCartCount = updateCartCount;

    // Function to update header avatar (reusable for SignalR and other updates)
    function updateHeaderAvatar(avatarUrl) {
        if (!avatarUrl) {
            console.warn('updateHeaderAvatar: avatarUrl is empty');
            return;
        }
        
        console.log('updateHeaderAvatar called with URL:', avatarUrl);
        
        // Try to find existing avatar image by ID first
        let img = document.getElementById('header-user-avatar');
        
        if (img) {
            // Update existing image with timestamp to force refresh
            console.log('Updating existing header avatar image');
            img.src = avatarUrl + '?t=' + new Date().getTime();
            // Add fade effect
            img.style.opacity = '0.5';
            setTimeout(() => {
                img.style.opacity = '1';
                img.style.transition = 'opacity 0.3s ease-in-out';
            }, 100);
        } else {
            // If no avatar exists, replace placeholder with image
            const placeholder = document.getElementById('header-avatar-placeholder');
            if (placeholder) {
                console.log('Replacing header placeholder with avatar image');
                const newImg = document.createElement('img');
                newImg.id = 'header-user-avatar';
                newImg.src = avatarUrl + '?t=' + new Date().getTime();
                newImg.alt = '@userName';
                newImg.className = 'h-8 w-8 rounded-full object-cover border-2 border-white';
                newImg.style.transition = 'opacity 0.3s ease-in-out';
                placeholder.replaceWith(newImg);
            } else {
                console.error('updateHeaderAvatar: Could not find avatar image or placeholder element');
            }
        }
    }

    // Expose globally for other pages
    window.updateHeaderAvatar = updateHeaderAvatar;

    // Initialize SignalR connection for header avatar updates (if user is authenticated)
    @if (isAuthenticated && currentUserId.HasValue)
    {
        <text>
        (function() {
            // Wait for SignalR to be available (might load after page script)
            function initializeHeaderSignalR() {
                if (!window.signalR) {
                    console.warn('SignalR is not loaded for header, retrying in 500ms...');
                    setTimeout(initializeHeaderSignalR, 500);
                    return;
                }

                const userId = @currentUserId.Value;
                if (!userId || userId === 0) {
                    console.warn('User ID not available for SignalR connection in header');
                    return;
                }

                // Reuse existing connection if available (from Profile page)
                if (window.__notificationHubConnection) {
                    console.log('Reusing existing SignalR connection for header avatar updates');
                    const existingConnection = window.__notificationHubConnection;
                    
                    // Ensure we're listening for AvatarUpdated events
                    existingConnection.on('AvatarUpdated', function(data) {
                        console.log('AvatarUpdated event received in header via SignalR:', data);
                        if (data && data.userId === userId && data.avatarUrl) {
                            console.log('Updating header avatar via SignalR for user:', userId);
                            updateHeaderAvatar(data.avatarUrl);
                        }
                    });
                    
                    // Ensure we're in the user group (rejoin if needed)
                    existingConnection.invoke('JoinUserGroup', userId)
                        .then(() => console.log('Header: Joined/rejoined user group:', userId))
                        .catch(err => console.error('Header: Error joining group:', err));
                    
                    return;
                }

                // Otherwise, create new connection
                console.log('Initializing new SignalR NotificationHub connection for header, user:', userId);

                const notificationConnection = new signalR.HubConnectionBuilder()
                    .withUrl('/hubs/notification')
                    .withAutomaticReconnect({
                        nextRetryDelayInMilliseconds: retryContext => {
                            if (retryContext.elapsedMilliseconds < 60000) {
                                return 2000;
                            }
                            return 10000;
                        }
                    })
                    .build();

                // Set up event handlers BEFORE starting connection
                notificationConnection.on('AvatarUpdated', function(data) {
                    console.log('AvatarUpdated event received in header via SignalR:', data);
                    if (data && data.userId === userId && data.avatarUrl) {
                        console.log('Updating header avatar via SignalR for user:', userId);
                        updateHeaderAvatar(data.avatarUrl);
                    }
                });

                // Connection state handlers
                notificationConnection.onclose(error => {
                    console.warn('SignalR NotificationHub connection closed in header', error);
                });

                notificationConnection.onreconnecting(error => {
                    console.log('SignalR NotificationHub reconnecting in header...', error);
                });

                notificationConnection.onreconnected(connectionId => {
                    console.log('SignalR NotificationHub reconnected in header:', connectionId);
                    // Rejoin group after reconnection
                    if (userId) {
                        notificationConnection.invoke('JoinUserGroup', userId)
                            .then(() => console.log('Header: Rejoined user group after reconnect:', userId))
                            .catch(err => console.error('Header: Error rejoining group:', err));
                    }
                });

                // Start connection and join user group
                notificationConnection.start()
                    .then(() => {
                        console.log('SignalR NotificationHub connected successfully in header');
                        return notificationConnection.invoke('JoinUserGroup', userId);
                    })
                    .then(() => {
                        console.log('Header: Successfully joined user group: user-' + userId);
                        // Store connection globally for reuse
                        window.__notificationHubConnection = notificationConnection;
                    })
                    .catch(err => {
                        console.error('SignalR NotificationHub connection error in header:', err);
                    });

                // Cleanup on page unload
                window.addEventListener('beforeunload', () => {
                    if (notificationConnection && !window.__notificationHubConnection) {
                        notificationConnection.stop();
                    }
                });
            }

            // Start initialization
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', initializeHeaderSignalR);
            } else {
                initializeHeaderSignalR();
            }
        })();
        </text>
    }

    // Initialize on load
    $(document).ready(function () {
        updateCartCount();
        // Expose current user id for SignalR payload filtering
        @if (currentUserId.HasValue)
        {
            @:window.CURRENT_USER_ID = @currentUserId.Value;
        }

        // Load wallet balance
        $.get('@Url.Action("GetBalance","Wallet")', function(resp){
            if (resp && resp.success){
                var n = Number(resp.balance || 0);
                $('#wallet-balance-text').text(n.toLocaleString() + ' ₫');
                $('#wallet-balance-large').text(n.toLocaleString() + ' ₫');
            }
        });

        // Toggle wallet dropdown
        $(document).on('click', '#wallet-button', function(e){
            e.stopPropagation();
            $('#wallet-dropdown').toggleClass('hidden');
            $('#user-dropdown').addClass('hidden');
        });
        // Close when clicking outside (wallet only)
        $(document).on('click', function(){
            $('#wallet-dropdown').addClass('hidden');
        });
    });
    </script>