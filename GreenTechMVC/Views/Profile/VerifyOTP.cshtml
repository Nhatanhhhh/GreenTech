@model DAL.DTOs.User.VerifyOTPDTO
@{
    ViewData["Title"] = "Xác thực OTP";
}

<div class="container mx-auto max-w-md py-8 px-4">
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
        <div class="flex justify-center mb-6">
            <img src="~/images/logo_greentech.png" alt="GreenTech Logo" class="h-12">
        </div>

        <h2 class="text-2xl font-bold text-center text-[#007934] mb-2 font-['Roboto_Condensed'] uppercase">
            Xác thực OTP
        </h2>

        <p class="text-sm text-gray-600 text-center mb-6 font-['Roboto']">
            Chúng tôi đã gửi mã OTP đến email <strong>@Model.Email</strong>. Vui lòng nhập mã OTP để tiếp tục.
        </p>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-md text-sm">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-controller="Profile" asp-action="VerifyOTP" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-red-600 bg-red-100 border border-red-400 rounded p-3 text-sm mb-4" role="alert"></div>

            <input type="hidden" asp-for="Email" />

            <div class="form-group">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1 font-['Roboto']">
                    Email
                </label>
                <input asp-for="Email" type="email" readonly
                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm bg-gray-100
                              focus:outline-none sm:text-sm cursor-not-allowed">
            </div>

            <div class="form-group">
                <label asp-for="OTP" class="block text-sm font-medium text-gray-700 mb-1 font-['Roboto']">
                    @Html.DisplayNameFor(m => m.OTP) <span class="text-red-500">*</span>
                </label>
                <input asp-for="OTP" type="text" maxlength="6" id="otpInput"
                       class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400
                              focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm text-center text-2xl tracking-widest font-bold"
                       placeholder="000000" autocomplete="off">
                <span asp-validation-for="OTP" class="mt-1 text-xs text-red-600"></span>
                <p class="mt-1 text-xs text-gray-500">Nhập 6 chữ số từ email của bạn</p>
            </div>

            <button type="submit"
                    class="w-full px-4 py-2 bg-[#007934] text-white rounded-md hover:bg-[#006028] transition-colors text-sm font-['Roboto']">
                <i class="fas fa-check-circle mr-1"></i> Xác thực OTP
            </button>
        </form>

        <div class="text-center space-y-2 mt-6">
            <p class="text-sm text-gray-600">Chưa nhận được mã OTP?</p>
            <form id="resendOTPForm" asp-controller="Profile" asp-action="ForgotPassword" method="post" class="inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="Email" value="@Model.Email" />
                <button type="submit"
                        class="text-sm text-green-600 hover:text-green-800 font-medium font-['Roboto']">
                    <i class="fas fa-redo mr-1"></i> Gửi lại mã OTP
                </button>
            </form>
            <div class="pt-2">
                <a asp-controller="Auth" asp-action="Login"
                   class="text-sm text-gray-600 hover:text-gray-800 font-medium font-['Roboto']">
                    <i class="fas fa-arrow-left mr-1"></i> Quay lại đăng nhập
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    // Auto-format OTP input (only numbers, max 6 digits)
    document.addEventListener('DOMContentLoaded', function() {
        const otpInput = document.getElementById('otpInput');
        if (otpInput) {
            otpInput.addEventListener('input', function(e) {
                // Remove any non-digit characters
                this.value = this.value.replace(/\D/g, '');
                
                // Limit to 6 digits
                if (this.value.length > 6) {
                    this.value = this.value.substring(0, 6);
                }
            });
        }

        // Disable validation for "Gửi lại mã OTP" form
        const resendOTPForm = document.getElementById('resendOTPForm');
        if (resendOTPForm) {
            // Disable jQuery validation for this form since it only needs Email (no OTP required)
            $(resendOTPForm).on('submit', function(e) {
                // Clear any validation errors
                $(resendOTPForm).find('.field-validation-error').remove();
                $(resendOTPForm).find('.input-validation-error').removeClass('input-validation-error');
                
                // Disable unobtrusive validation on this form
                $(resendOTPForm).removeData('validator');
                $(resendOTPForm).removeData('unobtrusiveValidation');
                
                // Remove validation attributes temporarily to prevent validation
                $(resendOTPForm).removeAttr('data-val');
                
                // Allow form to submit normally without validation
                return true;
            });
            
            // Also prevent any validation from being attached to this form
            $(resendOTPForm).removeClass('valid');
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

