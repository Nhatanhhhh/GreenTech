@model DAL.DTOs.User.ForgotPasswordDTO
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container mx-auto max-w-md py-8 px-4">
    <div class="bg-white rounded-lg shadow-md border border-gray-200 p-8">
        <div class="flex justify-center mb-6">
            <img src="~/images/logo_greentech.png" alt="GreenTech Logo" class="h-12">
        </div>

        <h2 class="text-2xl font-bold text-center text-[#007934] mb-6 font-['Roboto_Condensed'] uppercase">
            Quên mật khẩu
        </h2>

        <p class="text-sm text-gray-600 text-center mb-6 font-['Roboto']">
            Nhập email của bạn để nhận token đặt lại mật khẩu.
        </p>

        <form asp-controller="Profile" asp-action="ForgotPassword" method="post" class="space-y-6">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly"
                class="text-red-600 bg-red-100 border border-red-400 rounded p-3 text-sm mb-4" role="alert"></div>

            <div class="form-group">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1 font-['Roboto']">
                    @Html.DisplayNameFor(m => m.Email) <span class="text-red-500">*</span>
                </label>
                <input asp-for="Email" type="email" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400
                              focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm"
                    placeholder="you@example.com">
                <span asp-validation-for="Email" class="mt-1 text-xs text-red-600"></span>
            </div>

            <button type="submit"
                class="w-full px-4 py-2 bg-[#007934] text-white rounded-md hover:bg-[#006028] transition-colors text-sm font-['Roboto']">
                <i class="fas fa-paper-plane mr-1"></i> Gửi OTP
            </button>

            <div class="text-center">
                <a asp-controller="Auth" asp-action="Login"
                    class="text-sm text-green-600 hover:text-green-800 font-medium font-['Roboto']">
                    <i class="fas fa-arrow-left mr-1"></i> Quay lại đăng nhập
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
