@{
    ViewData["Title"] = "Kết quả thanh toán";
    var isSuccess = (ViewBag.ResultCode as string) == "0";
}

<div class="max-w-xl mx-auto mt-10 bg-white rounded-lg shadow p-6 text-center">
    <div class="mb-4">
        @if (isSuccess)
        {
            <div class="text-green-600 text-3xl font-bold">Thanh toán thành công</div>
            <div class="text-gray-600 mt-2">Số tiền: @((ViewBag.Amount as string)?.ToString()) ₫</div>
        }
        else
        {
            <div class="text-red-600 text-3xl font-bold">Thanh toán thất bại</div>
        }
    </div>

    <div class="mt-2 space-y-1 text-left text-sm text-gray-700">
        <div><span class="font-semibold">Mã đơn hàng:</span> @ViewBag.OrderId</div>
        <div><span class="font-semibold">Mã giao dịch:</span> @ViewBag.TransId</div>
        <div><span class="font-semibold">Mô tả:</span> @ViewBag.Message</div>
        <div><span class="font-semibold">Mã kết quả:</span> @ViewBag.ResultCode</div>
    </div>

    <div class="mt-6 flex gap-3 justify-center">
        <a asp-controller="Wallet" asp-action="Index" class="px-4 py-2 rounded-lg bg-green-600 hover:bg-green-700 text-white">Về ví của tôi</a>
        <a asp-controller="Home" asp-action="Index" class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-gray-200 text-gray-800">Về Trang chủ</a>
    </div>
</div>

<script>
    // Tự động chuyển về ví sau 5 giây
    setTimeout(function(){ window.location.href = '@Url.Action("Index","Wallet")'; }, 5000);
</script>


