@{
    ViewData["Title"] = "Ví của tôi";
}

<div class="max-w-3xl mx-auto mt-8">
    <div class="bg-white rounded-lg shadow p-6">
        <h1 class="text-2xl font-semibold text-gray-900 mb-2">Ví của tôi</h1>
        <p class="text-gray-600 mb-6">Số dư hiện tại: <span id="wallet-balance"
                class="text-green-700 font-bold">@((ViewBag.WalletBalance as decimal?)?.ToString("N0")) ₫</span></p>

        <a asp-controller="Wallet" asp-action="TopUp"
            class="inline-flex items-center bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded-lg">Nạp
            tiền</a>
    </div>
</div>
